{
  "name": "jason",
  "version": "1.0.0",
  "description": "wild code school demo",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "start": "node app.js",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest  --no-cache",
    "server": "nodemon app.js",
    "dev": "concurrently \"npm run server\"  \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "./client"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lolottetheclash/jason.git"
  },
  "author": "lauren",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lolottetheclash/jason/issues"
  },
  "homepage": "https://github.com/lolottetheclash/jason#readme",
  "dependencies": {
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.7",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "supertest": "^6.0.1"
  }
}
